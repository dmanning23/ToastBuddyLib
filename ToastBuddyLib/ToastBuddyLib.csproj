<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <PackageId>ToastBuddyLib</PackageId>
    <Version>5.0.0</Version>
    <Title>ToastBuddyLib</Title>
    <Authors>dmanning23</Authors>
    <description>MonoGame library to easily show messages to the player via toast popups</description>
    <PackageProjectUrl>https://github.com/dmanning23/ToastBuddyLib</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/dmanning23/ToastBuddyLib</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>monogame</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.*">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="FontBuddy" Version="5.*"/>
    <PackageReference Include="GameTimer" Version="5.*"/>
  </ItemGroup>
</Project>