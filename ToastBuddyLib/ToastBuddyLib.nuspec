<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
	<metadata>
		<id>ToastBuddyLib</id>
		<version>2.0.10</version>
		<title>ToastBuddyLib</title>
		<authors>dmanning23</authors>
		<owners>dmanning23</owners>
		<projectUrl>https://github.com/dmanning23/ToastBuddyLib</projectUrl>
		<licenseUrl>https://github.com/dmanning23/ToastBuddyLib/blob/master/LICENSE.txt</licenseUrl>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>MonoGame library to easily show messages to the player via toast popups</description>
		<releaseNotes />
		<copyright>Copyright 2016</copyright>
		<tags>android, ios, windows universal, monogame, xamarin</tags>
		<dependencies>

			<!--Xamarin.Android-->
			<group targetFramework="MonoAndroid10">
				<dependency id="MonoGame.Framework.Android" version="3.7"/>
				<dependency id="FontBuddy" version="2.0"/>
				<dependency id="GameTimer" version="2.0"/>
			</group>

			<!--Xamarin.iOS Unified-->
			<group targetFramework="Xamarin.iOS10">
				<dependency id="MonoGame.Framework.iOS" version="3.7"/>
				<dependency id="FontBuddy" version="2.0"/>
				<dependency id="GameTimer" version="2.0"/>
			</group>

			<group targetFramework="net451">
				<dependency id="MonoGame.Framework.WindowsDX" version="3.7"/>
				<dependency id="FontBuddy" version="2.0"/>
				<dependency id="GameTimer" version="2.0"/>
			</group>

		</dependencies>
	</metadata>
	<files>

		<!--Xamarin.Android-->
		<file src="ToastBuddyLib.Android\bin\Release\ToastBuddyLib.Android.pdb" target="lib\MonoAndroid10\ToastBuddyLib.Android.pdb" />
		<file src="ToastBuddyLib.Android\bin\Release\ToastBuddyLib.Android.dll" target="lib\MonoAndroid10\ToastBuddyLib.Android.dll" />

		<!--Xamarin.iOS Unified-->
		<file src="ToastBuddyLib.iOS\bin\Release\ToastBuddyLib.iOS.pdb" target="lib\Xamarin.iOS10\ToastBuddyLib.iOS.pdb" />
		<file src="ToastBuddyLib.iOS\bin\Release\ToastBuddyLib.iOS.dll" target="lib\Xamarin.iOS10\ToastBuddyLib.iOS.dll" />

		<!--WindowsDX-->
		<file src="ToastBuddyLib.WindowsDX\bin\Release\ToastBuddyLib.WindowsDX.pdb" target="lib\net451\ToastBuddyLib.WindowsDX.pdb" />
		<file src="ToastBuddyLib.WindowsDX\bin\Release\ToastBuddyLib.WindowsDX.dll" target="lib\net451\ToastBuddyLib.WindowsDX.dll" />

	</files>
</package>
